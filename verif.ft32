if ($cwd == $LANG_PROJECT_ROOT/41_ISO_IEC_9899) then 
   rm -f 6_Language/1_Lexical_elements/2_Identifiers/6_Compatible_type_and_composite_type/2_error/test000.c
endif

if (-f Makefile.ok.ft32) then
  cp Makefile.ok.ft32 Makefile.ok
endif  
if (-f Makefile.error.ft32) then
  cp Makefile.error.ft32 Makefile.error
endif
if (-f Makefile.ok2.ft32) then
